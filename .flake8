[flake8]
# Configuração do Flake8
max-line-length = 120
exclude =
    .git,
    __pycache__,
    migrations,
    venv,
    env,
    .venv,
    build,
    dist,
    *.egg-info
ignore =
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F403,  # unable to detect undefined names
    F405,  # unable to detect undefined names from star imports
per-file-ignores =
    __init__.py:F401
max-complexity = 15








