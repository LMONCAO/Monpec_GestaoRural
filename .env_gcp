# ==========================================
# CONFIGURAÇÕES DE PRODUÇÃO - GOOGLE CLOUD PLATFORM
# Projeto: monpec-sistema-rural
# ==========================================

# Modo de debug (desabilitado em produção)
DEBUG=False

# Chave secreta Django (NUNCA commitar o valor real)
SECRET_KEY=CHANGE_ME

# ==========================================
# CONFIGURAÇÕES DO BANCO DE DADOS - CLOUD SQL
# ==========================================

# Cloud SQL Connection Name
CLOUD_SQL_CONNECTION_NAME=monpec-sistema-rural:us-central1:monpec-db

# PostgreSQL
DB_NAME=monpec_db
DB_USER=monpec_user
DB_PASSWORD=CHANGE_ME
DB_HOST=/cloudsql/monpec-sistema-rural:us-central1:monpec-db
DB_PORT=

# ==========================================
# CONFIGURAÇÕES DO GOOGLE CLOUD
# ==========================================

# Projeto
GCP_PROJECT=monpec-sistema-rural

# Cloud Run
CLOUD_RUN_SERVICE=monpec
CLOUD_RUN_REGION=us-central1

# ==========================================
# CONFIGURAÇÕES DE EMAIL (OPCIONAL)
# ==========================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# ==========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ==========================================

# HTTPS (habilitado no Cloud Run)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
















