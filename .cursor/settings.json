{
  // ========================================
  // CONFIGURAÇÕES DE PERFORMANCE DO CURSOR
  // ========================================
  
  // Excluir arquivos/pastas do watcher (não monitorar mudanças)
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/venv/**": true,
    "**/env/**": true,
    "**/ENV/**": true,
    "**/python311/**": true,
    "**/__pycache__/**": true,
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/*.pyd": true,
    "**/backups/**": true,
    "**/backup_curral_refactor/**": true,
    "**/*.sqlite3": true,
    "**/*.db": true,
    "**/staticfiles/**": true,
    "**/media/**": true,
    "**/.cursor/**": true,
    "**/.vscode/**": true
  },
  
  // Excluir arquivos da busca
  "search.exclude": {
    "**/node_modules": true,
    "**/venv": true,
    "**/env": true,
    "**/ENV": true,
    "**/python311": true,
    "**/__pycache__": true,
    "**/backups": true,
    "**/backup_curral_refactor": true,
    "**/*.sqlite3": true,
    "**/*.db": true,
    "**/staticfiles": true,
    "**/media": true,
    "**/.git": true,
    "**/.cursor": true
  },
  
  // Limitar arquivos a serem indexados
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true
  },
  
  // Configurações de editor para melhor performance
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": false,
  "editor.cursorBlinking": "solid",
  "editor.renderWhitespace": "none",
  "editor.occurrencesHighlight": false,
  "editor.selectionHighlight": false,
  "editor.hover.delay": 300,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "off"
  },
  "editor.quickSuggestionsDelay": 100,
  
  // Desabilitar recursos que consomem muita memória
  "python.analysis.indexing": false,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "openFilesOnly",
  
  // Limitar quantidade de arquivos abertos
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 10,
  "workbench.editor.limit.perEditorGroup": true,
  
  // Desabilitar preview de arquivos
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  
  // Configurações de terminal
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.rendererType": "dom",
  
  // Configurações de extensões
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  
  // Configurações de telemetria (reduz uso de recursos)
  "telemetry.telemetryLevel": "off",
  
  // Configurações de Git (reduz processamento)
  "git.enabled": true,
  "git.autorefresh": false,
  "git.autoRepositoryDetection": false,
  "git.ignoreLimitWarning": true,
  
  // Limitar sugestões de código
  "editor.suggest.maxVisibleSuggestions": 12,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  
  // Configurações de arquivos grandes
  "files.maxMemoryForLargeFilesMB": 4096,
  "editor.largeFileOptimizations": true
}









